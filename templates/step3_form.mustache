<script>
window.isAddingNewTopic = false;

document.addEventListener('DOMContentLoaded', function () {
    const topicsWrapper = document.getElementById('topics-wrapper');
    const topicOrderInput = document.getElementById('topic-order');
    const addTopicBtn = document.getElementById('add-topic-btn');
    const form = document.getElementById('haccgen-form');
    const saveBtn = document.getElementById('save-btn');
    const backBtn = form.querySelector('button[name="action"][value="back"]');

    const editModal = document.getElementById('editTopicModal');
    const edittitleInput = document.getElementById('edit-topic-title');
    const editDescriptionInput = document.getElementById('edit-topic-description');
    const editDurationSpan = document.getElementById('edit-topic-duration');
    const objectivesList = document.getElementById('edit-topic-objectives');
    const editIdInput = document.getElementById('edit-topic-id');
    const editDurationInput = document.getElementById('edit-topic-duration');
    const newObjectiveInput = document.getElementById('new-objective-input');
    const addObjectiveBtn = document.getElementById('add-objective-btn');


    const quizYesRadio = document.getElementById('quiz-yes');
    const quizNoRadio = document.getElementById('quiz-no');
    const quizQuestionCountGroup = document.getElementById('quiz-question-count-group');
    const quizQuestionInput = document.getElementById('edit-topic-quiz-questions');
// Prevent Enter from submitting form except in textarea
document.getElementById('edit-topic-form').addEventListener('keydown', function(e) {
  if (e.key === 'Enter' && e.target.tagName !== 'TEXTAREA' && e.target.id !== 'new-objective-input') {
    e.preventDefault();
  }
});

// Add Objective button
addObjectiveBtn.addEventListener('click', () => {
  const text = newObjectiveInput.value.trim();
  if (text) {
    const li = document.createElement('li');
    li.className = 'list-group-item d-flex justify-content-between align-items-center';

    const span = document.createElement('span');
    span.textContent = text;

    const removeBtn = document.createElement('button');
    removeBtn.className = 'btn btn-sm btn-danger ms-2';
    removeBtn.textContent = '×';
    removeBtn.addEventListener('click', () => li.remove());

    li.appendChild(span);
    li.appendChild(removeBtn);
    objectivesList.appendChild(li);
    newObjectiveInput.value = '';
  }
});

// Allow Enter to act like clicking "Add"
newObjectiveInput.addEventListener('keydown', (e) => {
  if (e.key === 'Enter') {
    e.preventDefault();
    addObjectiveBtn.click();
  }
});



    const spinnerHTML = `<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span> Generating..`;

    function toggleQuizQuestionCount() {
        quizQuestionCountGroup.style.display = quizYesRadio.checked ? 'block' : 'none';
    }

    quizYesRadio.addEventListener('change', toggleQuizQuestionCount);
    quizNoRadio.addEventListener('change', toggleQuizQuestionCount);

    // Handle topic click (Edit/Delete)
    topicsWrapper.addEventListener('click', (e) => {
        const item = e.target.closest('.topic-item');
        if (!item) return;

        const deleteBtn = e.target.closest('.delete-btn');
        const editBtn = e.target.closest('.edit-btn');

        if (deleteBtn) {
            item.remove();
            updateTopicOrder();
        } else if (editBtn) {
            let topicdata = {};
            try {
                topicdata = JSON.parse(decodeURIComponent(item.dataset.topicdata || '{}'));
            } catch (err) {
                console.warn('Failed to parse topic data:', err);
            }

            editIdInput.value = topicdata.id || item.dataset.id || '';
            edittitleInput.value = topicdata.title || '';
            editDescriptionInput.value = topicdata.description || '';
            editDurationInput.value = topicdata.estimated_duration || '';
            quizYesRadio.checked = topicdata.has_quiz || false;
            quizNoRadio.checked = !topicdata.has_quiz;
            quizQuestionCountGroup.style.display = topicdata.has_quiz ? 'block' : 'none';
            quizQuestionInput.value = topicdata.quiz_question_count || 1;
            objectivesList.innerHTML = '';
     (topicdata.learning_objectives || []).forEach(obj => {
  const li = document.createElement('li');
  li.className = 'list-group-item d-flex justify-content-between align-items-center';

  const span = document.createElement('span');
  span.textContent = obj;

  const removeBtn = document.createElement('button');
  removeBtn.className = 'btn btn-sm btn-danger ms-2';
  removeBtn.textContent = '×';
  removeBtn.addEventListener('click', () => li.remove());

  li.appendChild(span);
  li.appendChild(removeBtn);
  objectivesList.appendChild(li);
});

            window.currentEditingItem = item;
            window.isAddingNewTopic = false;

            const modalInstance = new bootstrap.Modal(editModal);
            modalInstance.show();
        }
    });

    // Handle Add Topic button
    addTopicBtn.addEventListener('click', () => {
        edittitleInput.value = '';
        editDescriptionInput.value = '';
        editDurationSpan.textContent = '';
        objectivesList.innerHTML = '';
        quizNoRadio.checked = true;
        quizYesRadio.checked = false;
        quizQuestionInput.value = 1;
        quizQuestionCountGroup.style.display = 'none';
        editIdInput.value = '';
        window.currentEditingItem = null;
        window.isAddingNewTopic = true;

        const modalInstance = new bootstrap.Modal(editModal);
        modalInstance.show();
    });

    // Handle Save Changes in Modal (Add/Edit)
    document.getElementById('edit-topic-form').addEventListener('submit', function (e) {
        e.preventDefault();

        const newTitle = edittitleInput.value.trim();
        const newDesc = editDescriptionInput.value.trim();
      
        const duration = editDurationInput.value.trim();

const objectives = Array.from(objectivesList.querySelectorAll('li')).map(li =>
  li.querySelector('span').textContent.trim()
);

        const topicdata = {
            id: editIdInput.value || `topic-${Date.now()}`,
            title: newTitle,
            description: newDesc,
            estimated_duration: duration,
            learning_objectives: objectives,
            has_quiz: quizYesRadio.checked,
            quiz_question_count: quizYesRadio.checked ? parseInt(quizQuestionInput.value || '1', 10) : 0,
            content: ''
        };

        const encodedData = encodeURIComponent(JSON.stringify(topicdata));

        if (window.isAddingNewTopic) {
            const newIndex = topicsWrapper.querySelectorAll('.topic-item').length;
            const newTopic = document.createElement('div');
            newTopic.className = 'topic-item';
            newTopic.setAttribute('draggable', 'true');
            newTopic.setAttribute('data-index', newIndex);
            newTopic.setAttribute('data-id', topicdata.id);
            newTopic.setAttribute('data-content', '');
            newTopic.setAttribute('data-topicdata', encodedData);
            newTopic.tabIndex = 0;
            newTopic.innerHTML = `
                <span>Topic ${newIndex + 1}: ${newTitle}</span>
                <div>
                    <button type="button" class="move-btn"><i class="fas fa-arrows-alt"></i></button>
                    <button type="button" class="edit-btn"><i class="fas fa-pencil-alt"></i></button>
                    <button type="button" class="delete-btn"><i class="fas fa-trash"></i></button>
                </div>
            `;
            topicsWrapper.appendChild(newTopic);
        } else if (window.currentEditingItem) {
            const item = window.currentEditingItem;
            item.dataset.topicdata = encodedData;
            const span = item.querySelector('span');
            const index = Array.from(topicsWrapper.querySelectorAll('.topic-item')).indexOf(item);
            span.textContent = `Topic ${index + 1}: ${newTitle}`;
        }

        updateTopicOrder();
        bootstrap.Modal.getInstance(editModal).hide();
        saveBtn.disabled = false;
    });

    // Reset modal state when closed
    editModal.addEventListener('hidden.bs.modal', function () {
        window.currentEditingItem = null;
        window.isAddingNewTopic = false;
        saveBtn.disabled = false;
    });

    // Update topic order
    function updateTopicOrder() {
        const topics = Array.from(topicsWrapper.querySelectorAll('.topic-item'));
        const order = topics.map((item, index) => {
            const span = item.querySelector('span');
            const title = span.textContent.split(':').slice(1).join(':').trim();
            item.dataset.index = index;
            span.textContent = `Topic ${index + 1}: ${title}`;
            let topicdata = {};
            try {
                topicdata = JSON.parse(decodeURIComponent(item.dataset.topicdata || '{}'));
            } catch (e) {}
            return {
                id: topicdata.id,
                title: topicdata.title,
                description: topicdata.description,
                estimated_duration: topicdata.estimated_duration,
                learning_objectives: topicdata.learning_objectives,
                content: topicdata.content,
                has_quiz: topicdata.has_quiz || false,
                quiz_question_count: topicdata.quiz_question_count || 0
            };
        });

        topicOrderInput.value = JSON.stringify(order);
        console.log('Updated topic_order:', order);

       
    }

updateTopicOrder();

let draggedItem = null;

topicsWrapper.addEventListener('dragstart', (e) => {
    draggedItem = e.target.closest('.topic-item');
    e.dataTransfer.effectAllowed = 'move';
});

topicsWrapper.addEventListener('dragover', (e) => {
    e.preventDefault();
    const target = e.target.closest('.topic-item');
    if (!target || target === draggedItem) return;
    topicsWrapper.insertBefore(draggedItem, target.nextSibling || target);
});

