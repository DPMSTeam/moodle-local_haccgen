                        <!-- Topics List -->
                        <div id="topics-wrapper">
                            {{#topics}}
                            
                                <div class="topic-item" draggable="true" data-index="{{@index}}" data-content="{{content}}" data-id="{{id}}" data-topicdata="{{&encoded_topicdata}}" tabindex="0">
                                    <span>Topic {{index_plus_one}}: {{title}}</span>
